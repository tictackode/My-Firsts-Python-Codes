class Potion:
	def __init__(self,name='healing',effect='+10 hp'):
		self.name=name
		self.effect=effect
	def getNome(self):
		return self.name
	def getEffect(self):
	        return self.effect


class Hero:
	def __init__(self,name='desconhecido',hp=10,mp=10):
		self.name=name
		self.hp=hp
		self.mp=mp
	def getNome(self):
		return self.name
	def getHp(self):
		return self.hp
	def getMp(self):
		return self.mp
	def drinkPotion(self, Potion):
		return Potion.getEffect()
